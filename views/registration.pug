doctype html
html(lang="en", data-theme=`${theme}`)
  head
    title Registration
    link(rel="stylesheet", href="/css/style.css")
    link(rel="shortcut icon", href="/favicon.ico", type="image/x-icon")

  body
    button#theme-toggle Switch theme
    div.container
      a(href="/") Main page
      h1 Registration
      form(action="http://localhost:3000/registration", method="POST", style="display: flex; flex-direction: column; gap: 1rem; max-width: 300px;")
        label(for="username") Enter your username
        input#username(type="text", name="username", placeholder="username...", autocomplete="off", required)

        label(for="password") Enter your password
        input#password(type="password", name="password", placeholder="password...", autocomplete="off", required)

        label(for="confirm_password") Confirm your password
        input#confirm_password(type="password", name="confirmPassword", placeholder="confirm password...", autocomplete="off", required)

        input(type="submit", value="Submit")
      if error
        div
          p(style="color: red")= error
    script(src="/js/script.js")